<!DOCTYPE html>
<html lang="en">
<head>
   {{>headlinks}}
</head>
<body style="background-image: url(https://th.bing.com/th/id/R.9dbad3e4cfa6ade173cfdf74ae283f49?rik=t7WErwCqo1Kc4w&riu=http%3a%2f%2fwww.weather1.com%2fassets%2fimages%2fwallpapers%2ffly00712.jpg&ehk=BVgpqcoKJf5e4NpN0NYaWuIxaUS%2f6gdn4Y5G4Tv9MJg%3d&risl=&pid=ImgRaw&r=0);     background-repeat: no-repeat; background-size: cover;" >
    {{>navbar}}
    
    <!-- -------------------- main header--------------------- -->
    <div class="container-fluid main_header">
        <div class="row">
            <div class = "col-md-10 col-12 mx-auto">
                <div class = "main_content">
                    <form class="temp_form">
                        <input type="text" id="cityName" placeholder="Enter your city name" autocomplete="off">
                        <input type="submit" value="search" id="submitbtn">
                    </form>
                </div>
                <div class="tempInformation">
                    <div class="top_layer">
                    <p id="day">day</p>
                    <div class="calen">
                    <p id="date">date</p>
                    <p id="Month">Month</p>
                    <p id="Year">Year</p>
                    </div>
                   </div>
                    <div class="main_layer">
                       <p id = "city_name">Get Output Here</p>
                       <div class="middle_layer data_hide">
                       <p id="temp"><span id="temp_real_val">0</span><sup>o</sup>C</p>
                       <p id="temp_status"><i class='bx bxs-cloud'></i></p>
                       </div>
                       <div class="bottom_layer data_hide">
                        <div class="part">
                            <p class="desp">Description : <span id="des_val">des</span></p>
                            <p class="pressure">Pressure : <span id="pre_val">pre</span></p>
                        </div>
                        <div class="part">
                            <p class="feel">Feels like : <span id="feel_val">feel</span></p>
                            <p class="humidity">Humidity : <span id="hum_val">hum</span></p>
                        </div>
                        <div class="part">
                            <p class="speed">Speed : <span id="speed_val">des</span></p>
                            <p class="timezone">Timezone : <span id="time_val">des</span></p>
                        </div>
                       </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
      <!-- -------------------- footer --------------------- -->
    {{>footer}}
      <script src="js/main.js"></script>
      <script>
        const getCurrentDay = ()=>{

            const weekday = new Array(7);
            weekday[0] = "Sunday";
            weekday[1] = "Monday";
            weekday[2] = "Tuesday";
            weekday[3] = "Wednesday";
            weekday[4] = "Thursday";
            weekday[5] = "Friday";
            weekday[6] = "Saturday";
        
            let currentDate = new Date();
            const day = document.getElementById('day');
            let today = weekday[currentDate.getDay()];
            day.innerText = today;
        };
        getCurrentDay();

        const getCurrentMonth = () => {

        const month = new Array(12);
        month[0] = "Jan";
        month[1] = "Feb";
        month[2] = "March";
        month[3] = "April";
        month[4] = "May";
        month[5] = "June";
        month[6] = "July";
        month[7] = "August";
        month[8] = "September";
        month[9] = "October";
        month[10] = "November";
        month[11] = "December";

        var currentMonth = new Date();
        const Month = document.getElementById('Month');
        let thisMonth = month[currentMonth.getMonth()];
        Month.innerText = thisMonth;
        };
        getCurrentMonth();

        var currentDate = new Date();
        const date = document.getElementById('date');
        let thisDate = currentDate.getDate();
        date.innerText = thisDate;

        var currentYear = new Date();
        const Year = document.getElementById('Year');
        let thisYear = currentDate.getFullYear();
        Year.innerText = thisYear;

      </script>
</body>
</html>